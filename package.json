{
  "name": "@iptv-org/database",
  "scripts": {
    "act:check": "act pull_request -W .github/workflows/check.yml",
    "act:update": "act workflow_dispatch -W .github/workflows/update.yml",
    "act:deploy": "act push -W .github/workflows/deploy.yml",
    "db:validate": "ts-node scripts/db/validate.ts",
    "db:export": "ts-node scripts/db/export.ts",
    "db:update": "ts-node scripts/db/update.ts",
    "lint": "npx eslint \"{scripts,tests}/**/*.{ts,js}\"",
    "test": "jest --runInBand"
  },
  "engines": {
    "node": ">=18.0.0 <18.19.0"
  },
  "pre-commit": [
    "db:validate"
  ],
  "private": true,
  "author": "Arhey",
  "jest": {
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "testRegex": "tests/(.*?/)?.*test.(js|ts)$"
  },
  "dependencies": {
    "@freearhey/core": "^0.2.2",
    "@joi/date": "^2.1.0",
    "@json2csv/formatters": "^7.0.3",
    "@json2csv/node": "^7.0.3",
    "@json2csv/transforms": "^7.0.3",
    "@octokit/core": "^4.2.0",
    "@octokit/plugin-paginate-rest": "^6.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^7.1.3",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "chalk": "^4.1.2",
    "commander": "^9.0.0",
    "csvtojson": "^2.0.10",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "joi": "^17.6.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  }
}
