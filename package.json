{
  "name": "@iptv-org/database",
  "scripts": {
    "act:check": "act pull_request -W .github/workflows/check.yml",
    "act:update": "act workflow_dispatch -W .github/workflows/update.yml",
    "act:deploy": "act push -W .github/workflows/deploy.yml",
    "db:validate": "tsx scripts/db/validate.ts",
    "db:export": "tsx scripts/db/export.ts",
    "db:update": "tsx scripts/db/update.ts",
    "lint": "npx eslint \"{scripts,tests}/**/*.{ts,js}\"",
    "test": "jest --runInBand",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0 <=22.12.0"
  },
  "private": true,
  "author": "Arhey",
  "jest": {
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "testRegex": "tests/(.*?/)?.*test.(js|ts)$"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@freearhey/core": "^0.2.2",
    "@joi/date": "^2.1.0",
    "@json2csv/formatters": "^7.0.3",
    "@json2csv/node": "^7.0.3",
    "@json2csv/transforms": "^7.0.3",
    "@octokit/core": "^4.2.0",
    "@octokit/plugin-paginate-rest": "^6.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^7.1.3",
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "chalk": "^4.1.2",
    "commander": "^9.0.0",
    "csvtojson": "^2.0.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.0.0",
    "fs-extra": "^11.2.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.10.5"
  }
}
